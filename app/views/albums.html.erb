    <div class="album-app">
      <div class="album-filters">
        <h1>Sort By</h1>

        <form method="GET">
          <div class="input-group">
            <input type="text" class="input" name="album-number">
            <button type="submit" class="button">Highlight</button>
          </div>
        </form>
      </div>

      <%= @albums %>

      <table class="album-list">
