<html>
  <head>
    <title>Top 100 Albums</title>
    <!-- <link rel="stylesheet" type="text/css" href="/assets/styles.css"> -->
    <style>
      body, html {
        padding: 0;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: overflow;
        font-size: 14px;
        font-family: arial;
      }

      .album-app {
        background: #efefef;
        margin: 50px;
        padding: 25px 50px;
        width: 650px;
      }

      .album-filters {
        margin: 0 0 20px 0;
      }

      .input-group {
        display: flex;
      }

      .input,
      .button {
        font-size: 1em;
        padding: 5px;
        flex: 1;
        outline: none;
      }

      .input {
        min-width: 75%;
        border: solid 1px #ccc;
        border-right: 0;
      }

      .input:focus {
        border-color: blue;
      }

      .button {
        background: blue;
        color: #fff;
        border: 0;
      }

      .album-list {
        text-align: left;
        width: 100%;
      }

      .album-list thead {
        
      }

      .album-list tbody {
        
      }

      .album-list tbody tr {
        
      }

      .album-list tbody tr.highlighted-row td {
        background-color: red;
      }

      .album-list tbody tr td {
        padding: 10px 0;
      }
    </style>
  </head>
  <body>
    <div class="album-app">
      <div class="album-filters">
        <h1>Sort By</h1>

        <form method="GET">
          <div class="input-group">
            <input type="text" class="input" name="highlighted_index" value="<%= @highlighted_index == 0 ? '' : @highlighted_index %>">
            <button type="submit" class="button">Highlight</button>
          </div>
        </form>
      </div>
      
      <table class="album-list">
        <thead>
          <tr>
            <th><a href="?order_by=index">#</a></th>
            <th><a href="?order_by=name">Name</a></th>
            <th><a href="?order_by=year">Year</a></th>
          </tr>
        </thead>
        <tbody>
          <% @albums.each_with_index do |album, index| %>
            <tr class="<%= @highlighted_index == (index + 1).to_i ? 'highlighted-row' : '' %>">
              <td><%= (index + 1) %></td>
              <td><%= album[:name] %></td>
              <td><%= album[:year] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>